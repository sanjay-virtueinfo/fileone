<%= form_for @o_single, :html => { :class => 'form-horizontal' } do |f| %>
	<fieldset>
		<legend></legend>
   
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
       	<% if @o_single.errors[:name].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:name].first %></span>
      	<% end %>        
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :page_route, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.text_field :page_route, :class => 'text_field' %>
       	<% if @o_single.errors[:page_route].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:page_route].first %></span>
      	<% end %>                
      </div>
    </div>
    	
    <div class="control-group"><%= f.label :content, :class => 'control-label' %><div class="controls"><%= f.text_area :content, :class => 'text_field' %></div></div>
		 
    <div class="control-group">
      <%= f.label :is_footer, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_footer, :class => 'check_box' %>
      </div>
    </div>			 
     
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', users_url, :class => 'btn' %>
    </div>
    
  </fieldset>
<% end %>

