<%= form_for @o_single, :html => { :class => 'form-horizontal' } do |f| %>
	<fieldset>
		<legend></legend>
   
    <div class="control-group">
      <%= f.label :plan_id, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.select :plan_id, options_for_select(get_plans, (@o_single.plan.id unless @o_single.plan.nil?))  %>
       	<% if @o_single.errors[:plan_id].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:plan_id].first %></span>
      	<% end %>         
      </div>
    </div>    
   
    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.select :user_id, options_for_select(get_users, (@o_single.user.id unless @o_single.user.nil?))  %>
       	<% if @o_single.errors[:user_id].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:user_id].first %></span>
      	<% end %>         
      </div>
    </div>     
    
    <div class="control-group">
      <%= f.label :invoice_number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :invoice_number, :class => 'text_field' %>
      </div>
    </div>      
   
    <div class="control-group">
      <%= f.label :start_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :start_date, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :expire_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :expire_date, :class => 'text_field' %>
      </div>
    </div>    
    
    <div class="control-group">
      <%= f.label :amount, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :amount, :class => 'text_field' %>
      </div>
    </div>     
	 
    <div class="control-group">
      <%= f.label :is_verified, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_verified, :class => 'check_box' %>
      </div>
    </div>		 
	 
    <div class="control-group">
      <%= f.label :is_active, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_active, :class => 'check_box' %>
      </div>
    </div>			 
     
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', user_plans_url, :class => 'btn' %>
    </div>
    
  </fieldset>
<% end %>

