<table class="table table-striped">
 <thead> 
  <tr>
    <th width="20%"><%= t("general.name") %></th>
    <th width="20%"><%= t("general.type") %></th>
    <th width="20%"><%= t("general.date_modified")%></th>
    <th width="10%"><%= t("general.actions") %></th>    
  </tr>
 </thead> 
  
  <tbody>
    
	    <% if session[:parent_folder_id] %>
	    	<% if @o_folder.parent_folder.nil? %>
	    		<tr><td colspan="4"><%= link_to "..", folders_path %></td></tr>
	    	<% else %>
	    		<tr><td colspan="4"><%= link_to "..", sub_folders_path(@o_folder.parent_folder.id) %></td></tr>
	    	<% end %>	
	    <% end %>
	    
      <% @o_all.each do |o_row| %>
        <tr>
          <td>
          	<% if o_row.is_folder %>
          		<%= link_to o_row.name, sub_folders_path(o_row.id) %>
          	<% else %>
          		<%= o_row.name %>
          	<% end %>	
          </td>
          <td><%= o_row.file_content_type %></td>
          <td><%= o_row.updated_at.to_s(:pretty) %></td>
          <td> 
			      <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                  edit_folder_path(o_row), :class => 'btn btn-mini' %>
			      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                  folder_path(o_row),
			                  :method => :delete,
			                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                  :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>