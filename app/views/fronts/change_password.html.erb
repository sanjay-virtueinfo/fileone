<div class="page-header">
  <h4><%= t("general.change_password") %></h4>
</div>
<%= form_for @o_single, :url => change_password_path, :html => { :class => 'form-horizontal' } do |f| %>
<div class="loginfom">
  <fieldset>
    <legend></legend>

    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field' %>
       	<% if @o_single.errors[:password].any? %>
        	<i class="text-error"><%= @o_single.errors[:password].first %></i>
      	<% end %>        	        
      </div>
    </div>	
    
    <div class="control-group">
      <%= f.label :password_confirmation, :class => 'control-label' %><span class="redStart">*</span>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'text_field' %>
	     	<% if @o_single.errors[:password_confirmation].any? %>
	      	<i class="text-error"><%= @o_single.errors[:password_confirmation].first %></i>
	    	<% end %>        	        
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', users_path, :class => 'btn' %>
    </div>
    
  </fieldset>
</div>     
<% end %>
